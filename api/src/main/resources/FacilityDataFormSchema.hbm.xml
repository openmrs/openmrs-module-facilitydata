<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.facilitydata.model">

    <class name="FacilityDataForm" table="facilitydata_form" lazy="false">

        <id name="id" type="int" column="form_id"><generator class="native"/></id>
        
        <!-- OpenMRS Stuff -->
        <property name="uuid" type="java.lang.String" column="uuid" not-null="true" length="255"/>
        <property name="name" column="name" not-null="true" length="255"/>
        <property name="description" column="description" not-null="false" length="255"/>
        <many-to-one name="creator" class="org.openmrs.User" column="creator" not-null="true"/>
        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true"/>
		<many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" not-null="false"/>
        <property name="dateChanged" type="java.util.Date" column="date_changed" not-null="false"/>
        <property name="retired" column="retired" type="java.lang.Boolean" not-null="false"/>
        <many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" not-null="false"/>
        <property name="dateRetired" type="java.util.Date" column="date_retired" not-null="false"/>
        <property name="retireReason" type="java.lang.String" column="retired_reason" not-null="false" length="255"/>  
        <!-- / OpenMRS Stuff -->

        <property name="frequency" column="frequency" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.openmrs.module.facilitydata.model.enums.Frequency</param>
                 <param name="useNamed">true</param>
            </type>
        </property>

        <set name="schemas" cascade="all-delete-orphan" lazy="false">
            <key column="form" not-null="false"/>
            <one-to-many class="org.openmrs.module.facilitydata.model.FacilityDataFormSchema"/>
        </set>
    </class>

    <class name="FacilityDataFormSchema" table="facilitydata_form_schema" lazy="false">

        <id name="id" type="int" column="schema_id"><generator class="native"/></id>
        
        <!-- OpenMRS Stuff -->
        <property name="uuid" type="java.lang.String" column="uuid" not-null="true" length="255"/>
        <property name="name" column="name" not-null="true" length="255"/>
        <property name="description" column="description" not-null="false" length="255"/>
        <many-to-one name="creator" class="org.openmrs.User" column="creator" not-null="true"/>
        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true"/>
		<many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" not-null="false"/>
        <property name="dateChanged" type="java.util.Date" column="date_changed" not-null="false"/>
        <property name="retired" column="retired" type="java.lang.Boolean" not-null="false"/>
        <many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" not-null="false"/>
        <property name="dateRetired" type="java.util.Date" column="date_retired" not-null="false"/>
        <property name="retireReason" type="java.lang.String" column="retired_reason" not-null="false" length="255"/>  
        <!-- / OpenMRS Stuff -->

		<many-to-one name="form" class="FacilityDataForm" column="form" not-null="true" lazy="false"/>
        <property name="validFrom" type="java.util.Date" not-null="false" column="valid_from"/>
        <property name="validTo" type="java.util.Date" not-null="false" column="valid_to"/>
        
        <list name="sections" cascade="all-delete-orphan" lazy="false" inverse="false" batch-size="1000">
            <key column="schema_id" not-null="true"/>
            <list-index column="section_number" base="0"/>
            <one-to-many class="FacilityDataFormSection" />
        </list>
    </class>
    
</hibernate-mapping>